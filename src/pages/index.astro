---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout >
  <main class="flex-1">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-5 place-items-center place-content-center h-full">
      <Card
        href="https://www.github.com/"
        title="Github"
        body="Developer portal"
      />
      <Card
        href="https://www.youtube.com/"
        title="Youtube"
        body="Watch videos"
      />
      <Card
        href="https://www.twitch.tv/"
        title="Twitch"
        body="Watch games"
      />
      <Card
        href="https://www.netflix.com/"
        title="Netflix"
        body="Watch movies/tv"
      />
    </div>
  </main>
</Layout>
